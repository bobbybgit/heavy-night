<p style="color: green"><%= notice %></p>

<h1 class="page_title">Groups</h1>

<div id="groups">
  <% @groups.each do |group| %>
  <%if !group.private %>
  <div class="group_card card">
    <div class="profile_pic" id="generic_profile_pic" src=".app/assets/images/pp_generic" alt="a group of meeples, no profile picture provided"></div>
    <%= render group %>
    <p class=show_link>
      <%= link_to "Show this group", group %>
    </p>
    </div>
    <% end %>
  <% end %>
  
  
</div>

<%= link_to "New group", new_group_path %>
